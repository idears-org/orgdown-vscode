{
  "name": "orgdown-vscode",
  "displayName": "OrgDown",
  "description": "OrgMode is the only reason I still keep Emacs on my device, that's why I created this extension.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:org"
  ],
  "main": "./client/dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "org",
        "aliases": [
          "Org",
          "org",
          "Org Down",
          "org down",
          "OrgDown",
          "orgdown",
          "Org Mode",
          "org mode",
          "OrgMode",
          "orgmode",
          "Org Mode (Emacs)",
          "org mode (Emacs)"
        ],
        "extensions": [
          ".org"
        ],
        "configuration": "./syntaxes/org.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "org",
        "scopeName": "text.org",
        "path": "./syntaxes/org.tmLanguage.json",
        "embeddedLanguages": {
          "source.diff": "diff",
          "source.twig": "twig",
          "source.python": "python",
          "source.js": "javascript",
          "source.ts": "typescript",
          "source.tsx": "typescriptreact",
          "source.ruby": "ruby",
          "source.go": "go",
          "source.cpp": "cpp",
          "source.c": "c",
          "source.java": "java",
          "source.shell": "shellscript",
          "source.perl": "perl",
          "source.r": "r",
          "source.swift": "swift",
          "source.scala": "scala",
          "source.elixir": "elixir",
          "source.erlang": "erlang",
          "source.dart": "dart",
          "source.yaml": "yaml",
          "source.json": "json",
          "source.css": "css",
          "source.less": "less",
          "source.css.scss": "scss",
          "source.coffee": "coffeescript",
          "source.makefile": "makefile",
          "source.dockerfile": "dockerfile",
          "source.php": "php",
          "text.html.basic": "html",
          "text.xml": "xml",
          "text.tex.latex": "latex",
          "text.bibtex": "bibtex",
          "text.pug": "jade",
          "text.html.handlebars": "handlebars",
          "text.html.markdown": "markdown",
          "source.fsharp": "fsharp",
          "source.cs": "csharp",
          "source.objc": "objective-c"
        }
      }
    ]
  },
  "scripts": {
    "clean": "rm -rf out dist client/dist server/dist tsconfig.tsbuildinfo",
    "vscode:prepublish": "pnpm run build",
    "build:grammar": "tsx scripts/build-grammar.ts",
    "build:inspections": "tsx scripts/build-inspections.ts",
    "build:server": "pnpm -C server run compile",
    "build:client": "node esbuild.js",
    "build": "pnpm run clean && pnpm run build:grammar && pnpm run build:server && pnpm run build:client",
    "dev:ext": "node esbuild.js --watch",
    "dev:grammar": "tsx scripts/watch-grammar.ts",
    "dev:server": "pnpm -C server run watch",
    "dev": "pnpm run dev:ext & pnpm run dev:grammar & pnpm run dev:server",
    "check-types": "tsc --noEmit",
    "lint": "eslint client/src server/src common/src scripts test/unit test/integration --ext .ts,.js,.mjs",
    "pretest": "pnpm run build:grammar && pnpm run build:inspections",
    "test:unit": "vitest run",
    "test:integration": "vscode-test",
    "test": "pnpm run test:unit && pnpm run test:integration"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^5.2.1",
    "chokidar": "^4.0.3",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "js-yaml": "^4.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
