{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch:server",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "watch:server"],
      "isBackground": true,
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "presentation": { "group": "watch", "reveal": "never" }
    },
    {
      "label": "watch:client",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "watch:client"],
      "isBackground": true,
      "group": "build",
      "problemMatcher": "$esbuild-watch",
      "presentation": { "group": "watch", "reveal": "never" }
    },
    {
      "label": "watch:grammar",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "watch:grammar"],
      "isBackground": true,
      "group": "build",
      "problemMatcher": "$esbuild-watch",
      "presentation": { "group": "watch", "reveal": "never" }
    },
    {
      "label": "watch:inspections",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "watch:inspections"],
      "isBackground": true,
      "group": "build",
      "problemMatcher": "$esbuild-watch",
      "presentation": { "group": "watch", "reveal": "never" }
    },
    {
      "label": "watch:test:unit",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "watch:test:unit"],
      "isBackground": true,
      "group": "build",
      "problemMatcher": {
        "owner": "vitest",
        "pattern": { "regexp": "." },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^ RERUN",
          "endsPattern": "PASS  Waiting for file changes\\.\\.\\."
        }
      },
      "presentation": { "group": "watch", "reveal": "always" }
    },
    {
      "label": "watch:all",
      "dependsOn": ["watch:server", "watch:client", "watch:grammar", "watch:inspections", "watch:test:unit"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "presentation": { "reveal": "always" },
      "group": { "kind": "build", "isDefault": true },
      "detail": "Run all watch tasks in parallel for live development."
    }
  ]
}
