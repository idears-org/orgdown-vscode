{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["common/src/*"]
    },
    "composite": true,
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "client/src",
    "server/src",
    "common/src",
    "scripts",
    "test/unit",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", ".vscode-test", "out", "dist"]
}
